{
  "name": "@sonarwatch/portfolio-webapp",
  "description": "Backend service for Solana portfolio",
  "version": "0.0.1",
  "type": "commonjs",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node ./src/server.ts",
    "dev": "nodemon --exec ts-node ./src/server.ts",
    "test": "test",
    "build": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "docker:build": "docker build . -t solana-portfolio:latest",
    "docker:run": "docker run --rm -it solana-portfolio:latest"
  },
  "lint-staged": {
    "*.{js,ts,json,md,graphql}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "eslint --cache --ext .ts"
    ],
    "*.{js,ts}": [
      "eslint --fix --cache",
      "git add"
    ],
    "locales/**/*.json": [
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "@sonarwatch/portfolio-plugins": "^0.14.0"
  },
  "dependencies": {
    "dotenv": "16.4.7",
    "fastify": "5.3.2",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0"
  }
}

