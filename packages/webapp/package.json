{
  "name": "@sonarwatch/portfolio-webapp",
  "version": "0.0.1",
  "type": "commonjs",
  "description": "Backend service for Solana portfolio",
  "scripts": {
    "start": "ts-node ./src/server.ts",
    "dev": "nodemon --exec ts-node ./src/server.ts",
    "test": "test",
    "build": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "docker:build": "docker build . -t solana-portfolio:latest",
    "docker:run": "docker run --rm -it solana-portfolio:latest"
  },
  "peerDependencies": {
    "@sonarwatch/portfolio-plugins": "^0.14.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fastify": "5.3.2",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0"
  }
}

